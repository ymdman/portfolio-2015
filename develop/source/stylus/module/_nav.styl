//*********************************************
//
// Navigation
//
//*********************************************
//=============================================
// Icon
//=============================================
.g-nav-icon
  background-color color-theme-light
  width 50px
  height 39px
  position fixed
  top 25px
  right 10%
  cursor pointer
  z-index 500
  backface-visibility hidden // chromeでのちらつき防止

.g-nav-icon--top
  @extend .g-nav-icon
  opacity 0
  transition transform duration-normal, opacity duration-slow
  transform translate3d(0, 60px, 0)

@media mq-tb
  .g-nav-icon
  .g-nav-icon--top
    right 7%

@media mq-sp
  .g-nav-icon
  .g-nav-icon--top
    top 20px
    right 4%

// ----- Normal -------------------------------
.g-nav-icon__border--top
  g-nav-icon-border()
  g-nav-icon-border-horizontal()
  top 10px

.g-nav-icon__border--center-front
.g-nav-icon__border--center-back
  g-nav-icon-border()
  transition transform duration-normal
  top 18px

.g-nav-icon__border--bottom
  g-nav-icon-border()
  g-nav-icon-border-horizontal()
  bottom 10px

// ----- open ---------------------------------
.g-nav-icon.is-open
.g-nav-icon--top.is-open
  .g-nav-icon__border--top
  .g-nav-icon__border--bottom
    opacity 0

  .g-nav-icon__border--center-front
    transform rotate3d(0, 0, 1, 45deg)

  .g-nav-icon__border--center-back
    transform rotate3d(0, 0, 1, -45deg)

.g-nav-icon--top.is-active
  opacity 1
  transform translate3d(0, 0, 0)
  transition-delay 200ms

//=============================================
// Menu
//=============================================
// ----- Normal -------------------------------
.g-nav
  position fixed
  top 0
  left -(nav-width-pc)
  width nav-width-pc
  height 100%
  background-color color-theme-light
  z-index 200
  transition transform duration-normal

@media mq-tb
  .g-nav
    left -(nav-width-tb)
    width nav-width-tb

@media mq-sp
  .g-nav
    left -(nav-width-sp)
    width nav-width-sp

// ----- open ----------------------------------
.g-nav.is-open
  transform translateX(nav-width-pc)

@media mq-tb
  .g-nav.is-open
    transform translateX(nav-width-tb)

@media mq-sp
  .g-nav.is-open
    transform translateX(nav-width-sp)

.g-nav__title
  heading(heading-small)
  font-weight normal
  color fc-nav
  margin-top 50px
  margin-left 20px

.g-nav__list
  list-style none
  margin-top 20px

  > li
    border-bottom solid 1px bc-menu

    &:first-child
      border-top solid 1px bc-menu

    > a
      padding 15px 20px
      color fc-nav
      display block
      text-decoration none
      transition background-color duration-fast

    > a:hover
      background-color lightness(color-theme-light, 65%)

//=============================================
// Overlay
//=============================================
// ----- Normal -------------------------------
.g-nav-overlay
  width 100%
  height 100%
  position fixed
  visibility hidden
  top 0
  left 0
  z-index 100
  transition-duration duration-normal

// ----- open ---------------------------------
.g-nav-overlay.is-open
  cursor pointer
  background-color rgba(#000, 0.7)
  visibility visible