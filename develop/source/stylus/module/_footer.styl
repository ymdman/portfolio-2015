//*********************************************
//
// Footer
//
//*********************************************
.g-footer
  font-size fs-small
  margin-top 75px

@media mq-sp
  .g-footer
    margin-top 35px

//=============================================
// Page Top
//=============================================
.g-footer-page-top
  cursor pointer
  padding-top 25px
  padding-bottom 25px

  &::before
    content ""
    display block
    border-top solid 3px color-theme-dark
    border-right solid 3px color-theme-dark
    transform rotate(-45deg)
    transition border-color duration-fast
    width 20px
    margin-right auto
    margin-left auto
    height @width

  &:hover::before
    border-color lightness(color-theme-dark, 65%)

//=============================================
// Copyright
//=============================================
.g-footer-copyright
  background color-theme-dark
  width 100%
  padding-top 5px
  padding-bottom 5px

.g-footer-copyright__text
  color #fff
  text-align center
  display block
